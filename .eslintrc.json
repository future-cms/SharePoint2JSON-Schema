{
    "env": {
        "es6": true,
        "amd": true,
        "node":true,
        "shared-node-browser": true
    },
    "ecmaFeatures": {
        "modules": true,
        "module":  true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "rules": {
        "no-unused-expressions":"warn",
        "no-unused-labels":"warn",
        "no-unused-vars":"warn",
        "no-console":0,
        "indent": [
            "warn",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "warn",
            "always"
        ]
    }
}
